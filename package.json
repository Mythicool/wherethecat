{
  "name": "wherethecat",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A community-driven web application for crowdsourcing lost and homeless cat locations with geolocation support",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:prod": "npm run lint && vite build",
    "build:netlify": "vite build --mode production",
    "serve": "vite preview --port 3000",
    "clean": "rimraf dist",
    "build:test": "chmod +x scripts/build-and-test.sh && ./scripts/build-and-test.sh",
    "deploy:netlify": "npm run build:netlify && netlify deploy --prod --dir=dist",
    "deploy:preview": "npm run build:netlify && netlify deploy --dir=dist"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "firebase": "^10.14.1",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.522.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1",
    "vite": "^6.3.5"
  }
}
